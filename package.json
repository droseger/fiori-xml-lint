{
	"name": "fiori-xml-lint",
	"displayName": "Fiori XML Lint",
	"description": "Fiori XML Linter for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"workspaceContains:**/{ui5,mta}.{yml,yaml}"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"properties": {
				"xml.fiori.linter.run": {
					"type": "string",
					"enum": [
						"onSave",
						"onType",
						"off"
					],
					"default": "onType",
					"description": "Whether the linter is run on save, on type or disabled."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@sap/di.code-validation.core": "^1.0.12",
		"@sap/di.code-validation.xml": "^1.1.18"
	}
}
