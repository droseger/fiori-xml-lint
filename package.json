{
	"name": "fiori-xml-lint",
	"displayName": "Fiori XML Lint",
	"description": "Fiori XML Linter for VSCode",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/leo-ls/fiori-lint-xml"
	},
	"bugs": {
		"url": "https://github.com/leo-ls/fiori-lint-xml/issues"
	},
	"homepage": "https://github.com/leo-ls/fiori-lint-xml/blob/master/README.md",
	"license": "SEE LICENSE IN LICENSE.txt",
	"publisher": "leo-ls",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"workspaceContains:**/{ui5,mta}.{yml,yaml}"
	],
	"main": "./dist/extension",
	"contributes": {
		"configuration": {
			"properties": {
				"xml.fiori.linter.run": {
					"type": "string",
					"enum": [
						"onSave",
						"onType",
						"off"
					],
					"default": "onType",
					"description": "Whether the linter is run on save, on type or disabled."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"lint": "tslint -p ./",
		"deploy": "vsce publish --yarn"
	},
	"devDependencies": {
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"debug": "^4.1.1",
		"ts-loader": "^7.0.4",
		"tslint": "^6.1.2",
		"typescript": "^3.8.3",
		"vsce": "^1.75.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"@sap/di.code-validation.core": "^1.0.12",
		"@sap/di.code-validation.xml": "^1.1.18"
	}
}
